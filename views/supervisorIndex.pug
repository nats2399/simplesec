extends layout

block content
	.jumbotron.text-center.registrationTitle 
		.div
			p #{title}
			p.lead #{session.oFirstName} #{session.oLastName}

	.container
		ul.errors
			if errors
					each error, i in errors
						li.alert.alert-danger #{error.msg}
			if message
				li.alert.alert-success #{message}
			if messagee
				li.alert.alert-danger #{messagee}

	.div
		.container
			.row
				.col-lg-4.col-sm-6
					.card-box.bg-blue
						.inner
							if (session.oOrdersTS)
								h3=session.oOrdersTS
							else
								h3 0
							p  Total Orders 
						.icon
							i.fa.fa-list-alt(aria-hidden='true')
						a.card-box-footer(href='/orders/getOrders?status=all')
							| View Orders 
							i.fa.fa-arrow-circle-right
				.col-lg-4.col-sm-6
					.card-box.bg-green
						.inner
							if (session.oOrdersAS)
								h3=session.oOrdersAS
							else
								h3 0
							p  Orders to Approve 
						.icon
							i.fa.fa-check(aria-hidden='true')
						a.card-box-footer(href='/orders/getOrders?status=todo')
							| Approve Order
							i.fa.fa-check-circle
				.col-lg-4.col-sm-6
					.card-box.bg-red
						.inner
							h3 Hi  
							p=session.oFirstName+" "+session.oLastName
						.icon
							i.fa.fa-user
						a.card-box-footer(href='/users/account')
							| My Account 
							i.fa.fa-arrow-circle-right

		br
		br
		br
		br
		br
		br
	
	